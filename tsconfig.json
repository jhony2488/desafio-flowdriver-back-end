{
  "compilerOptions": {
    "target": "es2017",
    "types": [
      "node",
      "jest"
    ],
    "module": "commonjs",
    "lib": [
      "ES6"
    ],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@config/*": [
        "./src/config/*"
      ],
      "@controllers/*": [
        "./src/app/controllers/*"
      ],
      "@models/*": [
        "./src/app/models/*"
      ],
      "@views/*": [
        "./src/app/views/*"
      ],
      "@middlewares/*": [
        "./src/app/middlewares/*"
      ],
      "@utils/*": [
        "./src/app/utils/*"
      ]
    }
  },
  "include": [
    "./src/*",
    "./src/app/***",
    "./src/config/***",
    "./src/database/migrations/*",
    "./src/database/seeders/*"
  ],
  "exclude": [
    "__tests__/****"
  ]
}
